// --- ADDRESS BUS (Inputs) ---
IO_LOC "a[0]" 25;
IO_LOC "a[1]" 27;
IO_LOC "a[2]" 51;
IO_LOC "a[3]" 54;
IO_LOC "a[4]" 56;
IO_LOC "a[5]" 31;
IO_LOC "a[6]" 32;
IO_LOC "a[7]" 63;
