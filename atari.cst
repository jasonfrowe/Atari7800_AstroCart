// --- DATA BUS (Bi-Directional) ---
IO_LOC "d[0]" 41;
IO_LOC "d[1]" 40;
IO_LOC "d[2]" 33;
IO_LOC "d[3]" 29;
IO_LOC "d[4]" 30;
IO_LOC "d[5]" 34;
IO_LOC "d[6]" 35;
IO_LOC "d[7]" 42;
